<div class="col-md-4">

  <form class="col-md-12" action="/burger/add" method="POST">
    <div class="col-md-11 col-md-offset-1 text-center">
        <label for="burger"> Order Your Burger!</label>
        <input type="text" id="burger" name="user_burger" required>
    </div>
  </form>
</div>

<div class="col-md-4">

  <div class="col-md-12 text-center">
      <h1>Devour it!</h1>
      {{#each burger}}
        {{#unless this.devoured}}
          <form class="col-md-12" action="/burger/update/{{this.id}}?_method=PUT" method="POST">
          <div class="burger_name" id="burger1">{{this.burger_name}}
          </div>
          <button class="btn btn-warning btn-xs" type="submit"><img src="https://media.giphy.com/media/ToMjGplHPoYqSg7oACc/giphy.gif" alt="" /></button>
          </form>
        {{/unless}}
      {{/each}}
  </div>
</div>

<div class="col-md-4">
 
  <div class="col-md-12 text-center">
    <h2>Devoured Burgers</h2>
    {{#each burger}}
      {{#if this.devoured}}
          <form class="col-md-12" action="/burger/delete/{{this.id}}?_method=PUT" method="POST">
          <div class="burger_name">{{this.burger_name}}
          </div>
            <button class="btn btn-warning btn-xs" type="submit"><img src="https://media.giphy.com/media/ToMjGplHPoYqSg7oACc/giphy.gif" alt="" /></button>
          </form>
      {{/if}}
    {{/each}}
  </div>
</div>
